[Unit]
Description=BaybyWay Django Application
After=network.target mysql.service

[Service]
Type=notify
User=www-data
Group=www-data
WorkingDirectory=/home/gurusan/Документы/baybyWay
Environment=DJANGO_SETTINGS_MODULE=baybyway.settings_production
ExecStart=/home/gurusan/Документы/baybyWay/venv/bin/gunicorn --workers 3 --bind 0.0.0.0:8000 baybyway.wsgi_production:application
ExecReload=/bin/kill -s HUP $MAINPID
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target


